<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TransparentStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Text Button (A button with text in it *gets a seizure*)-->
    <style name="DialButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <!--<item name="android:background">@drawable/text_button_selector</item>-->
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- List View -->
    <style name="ListView" parent="Widget.AppCompat.ListView">
        <item name="android:dividerHeight">5dp</item>
        <item name="android:divider">@android:color/transparent</item>
    </style>

    <style name="ListItemText" />

    <style name="ListItemText.Big">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:text">Big Text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemText.Small">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:text">small text, small text, small text, small text, small text, small text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>

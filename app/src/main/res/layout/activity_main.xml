<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.activity.MainActivity">

    <!-- App Bar -->
    <include
        android:layout_marginRight="@dimen/appbar_margin"
        android:layout_marginLeft="@dimen/appbar_margin"
        android:id="@+id/appbar"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Contacts List View Fragment-->
    <fragment
        android:id="@+id/main_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:navGraph="@navigation/main"
        tools:layout="@layout/fragment_contacts" />

    <!-- Dialer Fragment-->
    <fragment
        android:id="@+id/main_dialer_fragment"
        android:name="com.chooloo.www.callmanager.ui.fragment.DialFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="main_dialer_tag"
        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/phone_number_input_with_margins_height"
        app:layout_anchorGravity="bottom"
        app:layout_behavior="@string/bottom_sheet_behavior"
        tools:layout="@layout/fragment_dial" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>